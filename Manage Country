import React, { useState } from 'react';
import { Link } from 'react-router-dom';
import { useQuery, useMutation, useQueryClient } from '@tanstack/react-query';
import { base44 } from '@/api/base44Client';
import { createPageUrl } from '@/utils';
import { Button } from '@/components/ui/button';
import { Input } from '@/components/ui/input';
import { Textarea } from '@/components/ui/textarea';
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card';
import { Select, SelectContent, SelectItem, SelectTrigger, SelectValue } from '@/components/ui/select';
import { ArrowLeft, Plus, Edit, Trash2, Save, X } from 'lucide-react';
import { toast } from 'sonner';

export default function ManageCountries() {
  const [isAdding, setIsAdding] = useState(false);
  const [editingId, setEditingId] = useState(null);
  const [formData, setFormData] = useState({
    name: '',
    flag_emoji: '',
    region: 'Asia',
    us_embassy_url: '',
    us_embassy_city: '',
    description: '',
    key_visa_types: []
  });
  const [visaInput, setVisaInput] = useState('');

  const queryClient = useQueryClient();

  const { data: countries = [], isLoading } = useQuery({
    queryKey: ['countries'],
    queryFn: () => base44.entities.Country.list('name', 100),
  });

  const createMutation = useMutation({
    mutationFn: (data) => base44.entities.Country.create(data),
    onSuccess: () => {
      queryClient.invalidateQueries({ queryKey: ['countries'] });
      resetForm();
      toast.success('Country added successfully');
    },
  });

  const updateMutation = useMutation({
    mutationFn: ({ id, data }) => base44.entities.Country.update(id, data),
    onSuccess: () => {
      queryClient.invalidateQueries({ queryKey: ['countries'] });
      resetForm();
      toast.success('Country updated successfully');
    },
  });

  const deleteMutation = useMutation({
    mutationFn: (id) => base44.entities.Country.delete(id),
    onSuccess: () => {
      queryClient.invalidateQueries({ queryKey: ['countries'] });
      toast.success('Country deleted successfully');
    },
  });

  const resetForm = () => {
    setFormData({
      name: '',
      flag_emoji: '',
      region: 'Asia',
      us_embassy_url: '',
      us_embassy_city: '',
      description: '',
      key_visa_types: []
    });
    setVisaInput('');
    setIsAdding(false);
    setEditingId(null);
  };

  const handleEdit = (country) => {
    setFormData(country);
    setEditingId(country.id);
    setIsAdding(true);
  };

  const handleSubmit = (e) => {
    e.preventDefault();
    if (editingId) {
      updateMutation.mutate({ id: editingId, data: formData });
    } else {
      createMutation.mutate(formData);
    }
  };

  const addVisaType = () => {
    if (visaInput.trim()) {
      setFormData({
        ...formData,
        key_visa_types: [...(formData.key_visa_types || []), visaInput.trim()]
      });
      setVisaInput('');
    }
  };

  const removeVisaType = (index) => {
    setFormData({
      ...formData,
      key_visa_types: formData.key_visa_types.filter((_, i) => i !== index)
    });
  };

  return (
    <div className="min-h-screen bg-gradient-to-br from-slate-50 to-blue-50 py-12 px-6">
      <div className="max-w-7xl mx-auto">
        <div className="flex items-center justify-between mb-8">
          <div>
            <Link to={createPageUrl('Home')} className="inline-flex items-center text-blue-600 hover:text-blue-700 mb-4 transition-colors">
              <ArrowLeft className="w-4 h-4 mr-2" />
              Back to Home
            </Link>
            <h1 className="text-4xl font-bold text-slate-900">Manage Countries</h1>
            <p className="text-slate-600 mt-2">Add, edit, or remove country information</p>
          </div>
          {!isAdding && (
            <Button onClick={() => setIsAdding(true)} className="bg-blue-600 hover:bg-blue-700">
              <Plus className="w-4 h-4 mr-2" />
              Add Country
            </Button>
          )}
        </div>

        {isAdding && (
          <Card className="mb-8 shadow-lg">
            <CardHeader>
              <CardTitle className="flex items-center justify-between">
                {editingId ? 'Edit Country' : 'Add New Country'}
                <Button variant="ghost" size="icon" onClick={resetForm}>
                  <X className="w-5 h-5" />
                </Button>
              </CardTitle>
            </CardHeader>
            <CardContent>
              <form onSubmit={handleSubmit} className="space-y-4">
                <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                  <div>
                    <label className="block text-sm font-medium text-slate-700 mb-2">Country Name *</label>
                    <Input
                      required
                      value={formData.name}
                      onChange={(e) => setFormData({ ...formData, name: e.target.value })}
                      placeholder="Philippines"
                    />
                  </div>

                  <div>
                    <label className="block text-sm font-medium text-slate-700 mb-2">Flag Emoji *</label>
                    <Input
                      required
                      value={formData.flag_emoji}
                      onChange={(e) => setFormData({ ...formData, flag_emoji: e.target.value })}
                      placeholder="ðŸ‡µðŸ‡­"
                    />
                  </div>

                  <div>
                    <label className="block text-sm font-medium text-slate-700 mb-2">Region *</label>
                    <Select value={formData.region} onValueChange={(value) => setFormData({ ...formData, region: value })}>
                      <SelectTrigger>
                        <SelectValue />
                      </SelectTrigger>
                      <SelectContent>
                        <SelectItem value="Asia">Asia</SelectItem>
                        <SelectItem value="Europe">Europe</SelectItem>
                        <SelectItem value="Africa">Africa</SelectItem>
                        <SelectItem value="North America">North America</SelectItem>
                        <SelectItem value="South America">South America</SelectItem>
                        <SelectItem value="Oceania">Oceania</SelectItem>
                        <SelectItem value="Middle East">Middle East</SelectItem>
                      </SelectContent>
                    </Select>
                  </div>

                  <div>
                    <label className="block text-sm font-medium text-slate-700 mb-2">U.S. Embassy City</label>
                    <Input
                      value={formData.us_embassy_city}
                      onChange={(e) => setFormData({ ...formData, us_embassy_city: e.target.value })}
                      placeholder="Manila"
                    />
                  </div>
                </div>

                <div>
                  <label className="block text-sm font-medium text-slate-700 mb-2">U.S. Embassy URL *</label>
                  <Input
                    required
                    type="url"
                    value={formData.us_embassy_url}
                    onChange={(e) => setFormData({ ...formData, us_embassy_url: e.target.value })}
                    placeholder="https://ph.usembassy.gov/"
                  />
                </div>

                <div>
                  <label className="block text-sm font-medium text-slate-700 mb-2">Description</label>
                  <Textarea
                    value={formData.description}
                    onChange={(e) => setFormData({ ...formData, description: e.target.value })}
                    placeholder="Brief description or guidance for immigrants from this country..."
                    rows={3}
                  />
                </div>

                <div>
                  <label className="block text-sm font-medium text-slate-700 mb-2">Common Visa Types</label>
                  <div className="flex gap-2 mb-2">
                    <Input
                      value={visaInput}
                      onChange={(e) => setVisaInput(e.target.value)}
                      placeholder="e.g., H-1B Work Visa"
                      onKeyPress={(e) => e.key === 'Enter' && (e.preventDefault(), addVisaType())}
                    />
                    <Button type="button" onClick={addVisaType} variant="outline">
                      <Plus className="w-4 h-4" />
                    </Button>
                  </div>
                  <div className="flex flex-wrap gap-2">
                    {formData.key_visa_types?.map((visa, index) => (
                      <div key={index} className="flex items-center gap-2 bg-blue-50 text-blue-700 px-3 py-1 rounded-full text-sm">
                        {visa}
                        <button type="button" onClick={() => removeVisaType(index)} className="hover:text-blue-900">
                          <X className="w-3 h-3" />
                        </button>
                      </div>
                    ))}
                  </div>
                </div>

                <div className="flex gap-3">
                  <Button type="submit" className="bg-blue-600 hover:bg-blue-700">
                    <Save className="w-4 h-4 mr-2" />
                    {editingId ? 'Update' : 'Create'} Country
                  </Button>
                  <Button type="button" variant="outline" onClick={resetForm}>
                    Cancel
                  </Button>
                </div>
              </form>
            </CardContent>
          </Card>
        )}

        <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {countries.map((country) => (
            <Card key={country.id} className="shadow-lg hover:shadow-xl transition-shadow">
              <CardHeader>
                <div className="flex items-start justify-between">
                  <div className="flex items-center gap-3">
                    <div className="text-4xl">{country.flag_emoji}</div>
                    <div>
                      <CardTitle className="text-lg">{country.name}</CardTitle>
                      {country.region && (
                        <div className="text-xs text-slate-500 mt-1">{country.region}</div>
                      )}
                    </div>
                  </div>
                  <div className="flex gap-1">
                    <Button variant="ghost" size="icon" onClick={() => handleEdit(country)}>
                      <Edit className="w-4 h-4" />
                    </Button>
                    <Button variant="ghost" size="icon" onClick={() => deleteMutation.mutate(country.id)} className="text-red-600 hover:text-red-700">
                      <Trash2 className="w-4 h-4" />
                    </Button>
                  </div>
                </div>
              </CardHeader>
              <CardContent>
                <p className="text-sm text-slate-600 mb-2 line-clamp-2">
                  {country.description || 'No description'}
                </p>
                {country.us_embassy_city && (
                  <p className="text-xs text-slate-500">Embassy: {country.us_embassy_city}</p>
                )}
              </CardContent>
            </Card>
          ))}
        </div>

        {isLoading && (
          <div className="text-center py-12">
            <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600 mx-auto" />
          </div>
        )}
      </div>
    </div>
  );
}
